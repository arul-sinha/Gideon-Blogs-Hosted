.context-menu {
  position: absolute;
  text-align: center;
  background: #d3d3d3;
  border: 1px solid #000;
}
.context-menu ul {
  padding: 0px;
  margin: 0px;
  min-width: 150px;
  list-style: none;
}
.context-menu ul li {
  padding-bottom: 7px;
  padding-top: 7px;
  border: 1px solid #000;
  transition: 1s;
}
.context-menu ul li a {
  text-decoration: none;
  color: #000;
}
.context-menu ul li:hover {
  background: #a9a9a9;
}